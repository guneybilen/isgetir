<table align="center">
  <tr>
    <th>Title</th>
    <th>Category</th>
    <th>Location</th>
    <th>Body</th>
    <th>Created at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%= job.title %></td>
    <% if !job.category.nil? %>
        <td><%= job.category.name %></td>
    <% else %>
        <td> other </td>
    <% end %>
    <td><%= job.location %></td>
    <td><%= truncate(job.body, :length => 25, :omission => '... (continued)') %></td>
    <td><%= job.created_at.to_date %></td>
    <td><%= link_to 'Show', job %></td>
    <td><%= link_to 'Edit', edit_job_path(job) %></td>
    <td><%= link_to 'Destroy', job, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

