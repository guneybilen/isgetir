<div class = 'index'>
<%= render "users/header" %>

<%= image_tag "chef.jpg", :size => "75x75", :alt => "Resim" %>
<%= image_tag "girl.jpg", :size => "75x75", :alt => "Resim" %>
<%= image_tag "graduate.jpg", :size => "75x75", :alt => "Resim" %>
<%= image_tag "man.jpg", :size => "75x75", :alt => "Resim" %>
<%= image_tag "group.jpg", :size => "75x75", :alt => "Resim" %>


<h1 class="listing_jobs" style="text-align: center;">Listing Jobs</h1>
</div>

<hr>

<!--<div id="jobs">
<%= render @jobs %>
</div>-->

<table align="center">
  <tr>
    <th>Title</th>
    <th>Category</th>
    <th>Location</th>
    <th>Body</th>
    <th>Created at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%= job.title %></td>
    <% if !job.category.nil? %>
        <td><%= job.category.name %></td>
    <% else %>
        <td> other </td>
    <% end %>
    <td><%= job.location %></td>
    <td><%= truncate(job.body, :length => 25, :omission => '... (continued)') %></td>
    <td><%= time_ago_in_words(job.created_at.to_date) %> ago</td>
    <td><%= link_to 'Show', job, {:class => "show"} %></td>
    <% if job.owned_by? current_user  %>
        <td><%= link_to 'Edit', edit_job_path(job), {:class => "visited"} %></td>
        <td><%= link_to 'Destroy', job, confirm: 'Are you sure?', method: :delete, :class => "visited" %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

