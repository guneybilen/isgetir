      <%= will_paginate_with_i18n(@jobs, :id => 'for_all_listing') %>
      <%= will_paginate_with_i18n(@jobs, :id => 'for_select_box_listing') %>
      <%= will_paginate_with_i18n(@jobs, :id => 'for_autocomplete_listing') %>

