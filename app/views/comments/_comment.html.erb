
<%= div_for comment do %>

    <%= comment.name %> &lt;<%= comment.email %>&gt;
    <br />
    <%= t('general.said') %>;
    <br />
    <span  class= 'konu'><%= comment.body %></span>
    &nbsp;&nbsp;&nbsp;
    <br />
    <% if @job.owned_by? current_user %>
        <span class='actions'>
            <%= link_to t('general.delete'), [@job, comment], :confirm => t('general.sure'),
                                        :method => :delete, :remote => true %>
        </span>
    <% end  %>


<% end %>


