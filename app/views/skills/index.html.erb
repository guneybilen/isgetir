<h1>Listing skills</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Location</th>
    <th>Reference</th>
    <th>Body</th>
    <th>Published at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @skills.each do |skill| %>
  <tr>
    <td><%= skill.title %></td>
    <td><%= skill.location %></td>
    <td><%= skill.reference %></td>
    <td><%= skill.body %></td>
    <td><%= skill.published_at %></td>
    <td><%= link_to 'Show', skill %></td>
    <td><%= link_to 'Edit', edit_skill_path(skill) %></td>
    <td><%= link_to 'Destroy', skill, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

