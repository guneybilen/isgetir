<div class="padlock"><%= image_tag 'padlock.jpg', :size => '100x100' %></div>
<div class="sign_in">
<h2 class="login_h2"><%= t('general.login') %></h2>
<br />
<%= form_tag session_path do %>
    <div class="fields_in_sessions_new">
      <%= label_tag t('general.email') %>:<br />
      <%= text_field_tag :email %>
    </div>
    <div class="fields_in_sessions_new">
      <%= label_tag t('general.password') %>:<br />
      <%= password_field_tag :password %>
    </div>
    <div class="submit_actions">
      <br />
          <%= hidden_field_tag :category_id, params[:category_id] %>
          <%= hidden_field_tag :locale, params[:locale] %>
          <%= hidden_field_tag :sort, params[:sort] %>
          <%= hidden_field_tag :direction, params[:direction] %>
          <%= hidden_field_tag :keyword, params[:keyword] %>
          <%= hidden_field_tag :page, params[:page] %>
          <%= hidden_field_tag :login_for_user_jobs, params[:login_for_user_jobs]  %>
      <%= submit_tag t('general.login'), :class => "login_submit" %> &nbsp; <%= t('general.or') %> &nbsp;
      <%= link_to t('general.link_to.back'), "#", :class => "geri" %>

    </div>
    <br />
    <div class="field">
        <%= check_box_tag :remember_me, 1, params[:remember_me] %>
        <%= label_tag t('general.remember_me') %>
    </div>
<% end %>
    <br />
<div class="forgotten_password">
      <%= link_to t('general.link_to.forgot_password'), '#',
                  :id => "forgot_my_password" %>
      <br /><br />
      <%= render :file => 'password_resets/new'%>


</div>
</div>

