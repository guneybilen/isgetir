<h1>Login</h1>
<%= form_tag session_path do %>
    <div class="field">
      <%= label_tag :email %><br />
      <%= text_field_tag :email %>
    </div>
    <div class="field">
      <%= label_tag :password %><br />
      <%= password_field_tag :password %>
    </div>
    <div class="actions">
      <%= submit_tag 'Login' %>
      <%= link_to "Cancel", root_path %>
    </div>
<% end %>
<div class="forgotten_password">
  <%= link_to "Forgot my password",'#', :onclick => "$('#forgot_password').slideDown()" %>
  <%= render 'forgot_password' %>
</div>
